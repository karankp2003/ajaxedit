<h4>Log in</h4>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Username or Email Address :" %>
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Log in" %></p>
<% end %>
