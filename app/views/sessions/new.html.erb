
<% content_for :logon do %>
<%= form_tag sessions_path do %>

    <%= label_tag :login, "Username or Email Address :" %>
    <%= text_field_tag :login, params[:login] %>
 
  <br/>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
<br/>
  <%= submit_tag "Log in" %>
<% end %>
<% end %>