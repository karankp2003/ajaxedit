<%= simple_form_for @user do |f| %>
  <%= f.error_messages %>
  <%= f.input :username,:label =>false, :placeholder => 'Your username please' %>
  <%= f.input :email, :label =>false,:placeholder => 'user@domain.com' %>
  <%= f.input :password,:label =>false,:placeholder => 'password', :hint => 'No special characters.' %>
  <%= f.input :password_confirmation,:label =>false,:placeholder => 'password confirmation', :hint => 'No special characters.' %>
  <%= f.submit (@user.new_record? ? "Sign up" : "Update") %>
<% end %>
